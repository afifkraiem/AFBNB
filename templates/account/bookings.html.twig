{% extends "base.html.twig" %}


{% block title %} Mes réservations {% endblock %}

{% block body %}

<div class="container">
<h1 class="text-center">Mes réservations</h1>
        <div class="alert alert-secondary mt-5">
        <p> Retrouvez ci-dessous toutes vos réservations passées et à venir </p>
        </div>

      {% for booking in app.user.bookings %}

        <div class="row mt-3 alert alert-light">
            <div class="col-md-4">
            
            <img src="{{booking.ad.coverImage}}" class="img-fluid " alt="">

            <div class="mt-3">
            {% set comment = booking.ad.commentFromAuthor(app.user) %}

            {% if comment is not null %}
            <strong>Note donnée : </strong> {% include "shared/rating.html.twig" with {'rating' : comment.rating} %}
            {% else %}
              Vous n'avez pas encore donnée une note.

              <a href="{{path('booking_show', {'id': booking.id})}}" class="btn btn-link"> Donnez votre avis ! </a>
            
            
            {% endif %}
            
            
            
            </div>
            </div>
            <div class="col-md-8">
            <h4>{{booking.ad.title}}</h4>
            <p>
            Réservation <strong>n°{{booking.id}}</strong><br>
            Du {{booking.startDate | date('d/m/Y')}} au {{booking.endDate | date('d/m/Y')}} ( {{booking.amount}} &euro;)

            </p>
            <a href="{{path('booking_show', {'id' : booking.id})}}" class="btn btn-info">Plus d'informations </a>
            </div>
        </div>
      
    {% endfor %}


</div>















{% endblock %}
