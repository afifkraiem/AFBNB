{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container ">
    
<div class="row mt-5">
  <div class="col-md-3">
  &nbsp;    
  </div>  

  <div class="col-md-6">
  <div class="bg-light py3- px-3 card">
        <h1 class="text-center">Connectez-vous !</h1><br>
        {% if hasError %}
        
        <div class="alert alert-danger alert-dismissible">
            <p>Une erreur est survenue, vérifiez que vous avez entré le bon email et mot de passe ! </p>
        </div>
        {% endif %}
        
        
        <form acion="{{path('account_login')}}" method="post">

            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" name="_username" id="email" placeholder="Adresse email ..." value="{{username}}" required>
                
            </div>
            <div class="form-group">
                <label for="Mot de passe">Mot de passe</label>
                <input type="password" class="form-control" name="_password" id="password" placeholder="Mot de passe ..." required>
            
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary " >Se connecter</button>
                <a href="{{path('reset_password')}}">Mot de passe oublié ? cliquez ici</a>
            </div>

        </form>
  </div>
  </div>  

</div>
</div>

{% endblock %}
